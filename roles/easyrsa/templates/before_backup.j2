# Backup easyrsa data container
mkdir -p -m u=rwx,g=rwx,o= "{{ easyrsa_docker_backup_dir }}"

printf '\n==> Backing up EasyRSA files\n'
docker run --rm \
    --network none \
    --volume {{ easyrsa_dv_name }}:/src:z \
    --volume {{ easyrsa_docker_backup_dir }}:/dest:z \
    {{ rsync_image_name }} \
    rsync --archive --itemize-changes --delete /src/ /dest/

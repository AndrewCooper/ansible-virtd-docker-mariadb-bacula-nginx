#
# Default Bacula Director Configuration file
#
#  The only thing that MUST be changed is to add one or more
#   file or directory names in the Include directive of the
#   FileSet resource.
#
#  For Bacula release 5.2.13 (19 February 2013) -- unknown unknown
#
#  You might also want to change the default email address
#   from root to your address.  See the "mail" and "operator"
#   directives in the Messages resource.
#
Director {
  Name = {{ bacula_director_name }}
  Dirport = {{ bacula_director_port }}
  Maximum Concurrent Jobs = 1
  Messages = DaemonLog
  Password = {{ bacula_director_password }}
  Pid Directory = {{ bacula_pid_dir }}
  QueryFile = {{ bacula_director_query_file }}
  Working Directory = {{ bacula_director_working_dir }}
}

#
# Generic catalog service
#
Catalog {
  Name = MyCatalog
  dbname = "{{ bacula_catalog_database }}"; dbuser = "{{ bacula_catalog_user }}"; dbpassword = "{{ bacula_catalog_password }}"
}

#
# Client (File Services) to backup
#
Client {
  Name = {{ bacula_client_name }}
  Address = {{ bacula_client_address }}
  AutoPrune = yes
  Catalog = MyCatalog
  FD Port = {{ bacula_client_port }}
  File Retention = 30 days
  Job Retention = 6 months
  Password = {{ bacula_client_password }}
}

#
# Restricted console used by tray-monitor to get the status of the director
#
Console {
  Name = {{ bacula_monitor_name }}
  CommandACL = status, .status
  Password = {{ bacula_monitor_password }}
}

#
# This is the backup of the catalog
#
FileSet {
  Name = CatalogFiles
  Include {
    Options {
      compression = GZIP
      signature = SHA1
    }
    File = {{ bacula_catalog_dir }}/bacula.sql
  }
}

#
# List of files to be backed up
#
FileSet {
  Name = Full Set
  Include {
    Options {
      compression = GZIP
      signature = SHA1
    }
    File = {{ bacula_filestorage_dir }}
  }
  Exclude {
    File = {{ bacula_install_prefix }}
    File = /tmp
    File = /proc
    File = /tmp
    File = /.journal
    File = /.fsck
  }
}

#
# Backup the catalog database (after the nightly save)
#
Job {
  Name = BackupCatalog
  JobDefs = DefaultJob
  Level = Full
  FileSet=CatalogFiles
  Schedule = CatalogCycle
  RunBeforeJob = '{{ bacula_scriptdir }}/make_catalog_backup.pl' MyCatalog
  Write Bootstrap = {{ bacula_bootstrap_dir }}/%n.bsr
  Priority = 11
}

#
# Define the main nightly save backup job
#   By default, this job will back up to disk in /tmp
#
Job {
  Name = BackupClient1
  JobDefs = DefaultJob
  RunBeforeJob = {{ bacula_scripts_before_backup }}
  RunAfterJob  = {{ bacula_scripts_after_backup }}
  Priority = 10
}

#
# Standard Restore template, to be changed by Console program
#  Only one such job is needed for all Jobs/Clients/Storage ...
#
Job {
  Name = RestoreFiles
  Type = Restore
  Client = {{ bacula_client_name }}
  FileSet = Full Set
  Storage = File
  Pool = DailyPool
  Messages = Standard
  Where = /tmp/bacula-restores
}

#
#
#
JobDefs {
  Name = DefaultJob
  Type = Backup
  Level = Differential
  Client = {{ bacula_client_name }}
  FileSet = Full Set
  Schedule = WeeklyCycle
  Storage = File
  Messages = Standard
  Pool = DailyPool
  Write Bootstrap = {{ bacula_bootstrap_dir }}/%c.bsr
  FullBackupPool = WeeklyPool
  DifferentialBackupPool = DailyPool
}

#
# Message delivery for daemon messages (no job).
#
Messages {
  Name = DaemonLog
  mailcommand = "/usr/sbin/bsmtp -h localhost -f \"\(Bacula\) \<%r\>\" -s \"Bacula daemon message\" %r"
  mail = root@localhost = all, !skipped
  console = all, !skipped, !saved
  append = "{{ bacula_log_dir }}/bacula.log" = all, !skipped
}

#
# Reasonable message delivery -- send most everything to email address
#  and to the console
#
Messages {
  Name = Standard
  #
  # NOTE! If you send to two email or more email addresses, you will need
  #  to replace the %r in the from field (-f part) with a single valid
  #  email address in both the mailcommand and the operatorcommand.
  #  What this does is, it sets the email address that emails would display
  #  in the FROM field, which is by default the same email as they're being
  #  sent to.  However, if you send email to more than one address, then
  #  you'll have to set the FROM address manually, to a single address.
  #  for example, a 'no-reply@mydomain.com', is better since that tends to
  #  tell (most) people that its coming from an automated source.
  #
  mailcommand = "/usr/sbin/bsmtp -h localhost -f \"\(Bacula\) \<%r\>\" -s \"Bacula: %t %e of %c %l\" %r"
  operatorcommand = "/usr/sbin/bsmtp -h localhost -f \"\(Bacula\) \<%r\>\" -s \"Bacula: Intervention needed for %j\" %r"
  mail = root@localhost = all, !skipped
  operator = root@localhost = mount
  console = all, !skipped, !saved
  #
  # WARNING! the following will create a file that you must cycle from
  #          time to time as it will grow indefinitely. However, it will
  #          also keep all your messages if they scroll off the console.
  #
  append = "{{ bacula_log_dir }}/bacula.log" = all, !skipped
  catalog = all
}

#
# Pool definitions
#
Pool {
  Name = DailyPool
  Pool Type = Backup
  Recycle = yes
  AutoPrune = yes
  Volume Retention = 365 days
}

#
#
#
Pool {
  Name = WeeklyPool
  Pool Type = Backup
  Recycle = yes
  AutoPrune = yes
  Volume Retention = 365 days
}

#
# Daily Catalog Backup
#
Schedule {
  Name = CatalogCycle
  Run = Full mon-fri at 23:10
}

#
# Weekly Full Backup Schedule
#
Schedule {
  Name = WeeklyCycle
  Run = Level=Full fri at 23:05
  Run = Level=Differential mon-thu at 23:05
}

#
# Definition of file storage device
#
Storage {
  Name = File
  Address = {{ bacula_storage_address }}
  SDPort = {{ bacula_storage_port }}
  Password = {{ bacula_storage_password }}
  Device = FileStorage
  Media Type = File
}

#
# Definition of tape storage device
#
Storage {
  Name = TapeDrive
  Address = {{ bacula_storage_address }}
  SDPort = {{ bacula_storage_port }}
  Password = {{ bacula_storage_password }}
  Device = {{ bacula_storage_device_name }}
  Media Type = {{ bacula_storage_device_media_type }}
}

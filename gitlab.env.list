USERMAP_UID=999
USERMAP_GID=999

GITLAB_PORT=443

REDIS_HOST=gitlab-redis
REDIS_PORT=6379

DB_TYPE=postgres
DB_HOST=gitlab-db
DB_PORT=5432
DB_NAME=gitlabhq_production


#: The email address for the GitLab server.
#: Defaults to example@example.com.
GITLAB_EMAIL=gitlab@novatech-llc.com

#: The name displayed in emails sent out by the GitLab mailer.
#: Defaults to GitLab.
GITLAB_EMAIL_DISPLAY_NAME=GitLab

#: The reply to address of emails sent out by GitLab.
#: Defaults to the noreply@example.com.
GITLAB_EMAIL_REPLY_TO=noreply@novatech-llc.com

#: Enable or disable gitlab mailer.
#: Defaults to the SMTP_ENABLED configuration.
GITLAB_EMAIL_ENABLED=True

#: Enable mail delivery via SMTP.
#: Defaults to true if SMTP_USER is defined, else defaults to false.
SMTP_ENABLED=true

#: SMTP domain. Defaults to www.gmail.com
SMTP_DOMAIN=novatech-llc.com

#: SMTP server host. Defaults to smtp.gmail.com.
#SMTP_HOST=mail.novatech-llc.com
SMTP_HOST=relay.dnsexit.com

#: SMTP server port. Defaults to 587.
#SMTP_PORT=25
SMTP_PORT=26

#: SMTP username.
#SMTP_USER=smtp_username

#: SMTP password.
#SMTP_PASS=smtp_password

#: Enable STARTTLS. Defaults to true.
SMTP_STARTTLS=false

#: Enable SSL/TLS. Defaults to false.
SMTP_TLS=false

#: SMTP openssl verification mode.
#: Accepted values are none, peer, client_once and fail_if_no_peer_cert.
#: Defaults to none.
SMTP_OPENSSL_VERIFY_MODE=none

#: Specify the SMTP authentication method.
#: Defaults to login if SMTP_USER is set.
#SMTP_AUTHENTICATION=login
SMTP_AUTHENTICATION=plain

#: Enable custom CA certificates for SMTP email configuration.
#: Defaults to false.
#SMTP_CA_ENABLED=true
#SMTP_CA_PATH=/etc/ssl/private/mail.crt
#SMTP_CA_FILE=/etc/ssl/private/mail.key


GITLAB_USERNAME_CHANGE=true
GITLAB_CREATE_GROUP=true

GITLAB_PROJECTS_ISSUES=true
GITLAB_PROJECTS_MERGE_REQUESTS=true
GITLAB_PROJECTS_WIKI=false
GITLAB_PROJECTS_SNIPPETS=true

GITLAB_SSH_PORT=22

LDAP_ENABLED=true
LDAP_HOST=gitlab-ldap
LDAP_PORT=389
LDAP_UID=uid
LDAP_METHOD=plain
LDAP_BIND_DN=cn=proxyagent,dc=novatech
LDAP_PASS=novatech
LDAP_ACTIVE_DIRECTORY=false
LDAP_ALLOW_USERNAME_OR_EMAIL_LOGIN=true
LDAP_BLOCK_AUTO_CREATED_USERS=false
LDAP_BASE=ou=user,dc=novatech
LDAP_USER_FILTER=(employeeType=gitlab)

OAUTH_ALLOW_SSO=false

#GITLAB_BACKUPS=daily
GITLAB_BACKUPS=disable
GITLAB_BACKUP_DIR=/home/git/backups
# Delete any backup older than an hour
# The backup should not take an hour
GITLAB_BACKUP_EXPIRY=3600
GITLAB_BACKUP_TIME=23:00

GITLAB_TIMEZONE=America\/Chicago

GITLAB_GRAVATAR_ENABLED=true
GITLAB_GRAVATAR_HTTP_URL=http://cdn.libravatar.org/avatar/%{hash}?s=%{size}&d=identicon
GITLAB_GRAVATAR_HTTPS_URL=https://seccdn.libravatar.org/avatar/%{hash}?s=%{size}&d=identicon

GITLAB_HTTPS=true
SSL_SELF_SIGNED=true
SSL_CERTIFICATE_PATH=/etc/ssl/private/nginx.crt
SSL_KEY_PATH=/etc/ssl/private/nginx.key
SSL_DHPARAM_PATH=/etc/ssl/dhparam.pem
SSL_VERIFY_CLIENT=off
CA_CERTIFICATES_PATH=/etc/ssl/certs/ca-certificates.crt

GITLAB_HTTPS_HSTS_ENABLED=true
GITLAB_HTTPS_HSTS_MAXAGE=31536000
